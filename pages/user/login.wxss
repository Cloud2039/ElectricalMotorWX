  /* 定义整个页面的背景颜色 */
  page {
    background-color: #EFEFEF;   /* 背景颜色 */
    height: 100%;
  }
  
  .login {
    height: 70%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    padding: 4px 12px;
  }

  .logo {
    height: 100px;
    width: 100px;
  }

  .form-wrap {
    border-top: 1px solid #eee;
    margin: 50px 0;
    width: 80%;
  }
  
  .input-box {
    display: flex;
    flex-direction: row;
    width: 100%;
    background: #fff;
    border-bottom: 1px solid #eee;
    height: 46px;
    line-height: 46px;
    align-items: center;
  }

  .input-box image{
    height: 30px;
    width: 30px;
    padding-right: 15px;
    padding-left: 15px;
  }
    
  .account-info-input {
    font-size: 18px;
    line-height: 100%;
    height: 100%;
    width: 100%;
  }

  .mysubmit {
    width: 80%;
    background-color: #4582fc;
    color: white;
  }

  .myerr {
    color: red;
  }