  /* 定义整个页面的背景颜色 */
  page {
    background-color: black;   /* 背景颜色 */
  }
  
  .denlgu {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 4px 12px;
  }

  .logo {
    height: 100px;
    width: 100px;
  }

  .form-wrap {
    border-top: 1px solid #eee;
    margin: 50px 0;
  }
  
  .flex-wrap {
    display: flex;
    flex-direction: row;
  }
  
  .input-wrap {
    background: #fff;
    border-bottom: 1px solid #eee;
    margin: 0 -12px;
    padding: 0 12px;
    height: 46px;
    line-height: 46px;
  }
  
  .label {
    color: #999;
    width: 4.5em;
  }
    
  .account-info-input {
    font-size: 18px;
    line-height: 100%;
    height: 100%;
    width: 100%;
  }

  .mysubmit {
    width: 80%;
    background-color: #00CA9A;
    color: white;
  }

  .myerr {
    color: red;
  }