/*头部信息*/

.head {
    display: flex;
    margin: 1px;
    padding: 10px;
    border-top: 1px solid grey;
    height: 150px;
  }

  .head-left-touxiang {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    border: 2px solid white;
    box-shadow: 3px 3px 10px gainsboro;
    display: block;
    overflow: hidden;
  }

  .head-right {
    padding-left: 10px;
    display: flex;
    flex-direction: row;
  }

  .head-right-txt1 {
    color: white;
  }

  .head-right-txt2 {
    background-color: darkorange;
    color: white;
    margin: 5px 0px;
    padding: 5px;
    height: 30px;
  }

  .block-usrname {
    display: flex;
    height: 100%;
    text-align: center;
    justify-content: center;
    align-items: center;
    margin-left: 50px;
  }

  .block-usrname text{
    font-size: 35px;
    font-weight: bold;
  }
  
  .caidan{
    display: flex;
    padding: 10px; 
    border-bottom: 1px solid gainsboro;
    margin-top: 10px;
  }
  .caidan-icon{
    width: 20px; height: 20px;
  }
  .caidan-text{
    flex-grow: 1;
    margin-left: 10px;
  }
  .caidan-arrow{
    width: 16px; height: 16px;
  }

  .mysubmit {
    margin-top: 50px;
    width: 80%;
    background-color: #4582fc;
    color: white;
  }