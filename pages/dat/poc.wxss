.move-container {
  position: fixed;
  display: flex;
  width: 100%;
  height: 100%;
  background-color: black; 
}

.move-container text {
  margin: 10px;
  display: block;
}

.flex-wrp{
  display:flex;
}

.flex-wrp-horizontal{
  display:flex;
  width: 100%;
  align-items: center;
}

.flex-wrp-vertical-poc{
  display:flex;
  height: 350px;
  width: 98%;
  border-radius: 20rpx;
  box-shadow: 0 0 5rpx rgba(0,0,0,0.15);
  margin-top: 5px;
  margin-bottom: 5px;
}

.top-sub-flex-wrp{
  display:flex;
  width:30%;
  align-items: center;
  justify-content: center;
}

.mid-sub-flex-wrp{
  display:flex;
  width: 50%;
}

.mid-test-sub-flex-wrp{
  display:flex;
  width:28%;
  align-items: center;
  justify-content: center;
}

.mid-icon{
  width: 40px;
  height: 40px;
}

.poc-wrp{
  display:flex;
  height: 60px
}