<!--pages/dat/overview.wxml-->
<Header></Header>
<view class="move-container" style="flex-direction: row;">
  <view class="flex-wrp" style="flex-direction: column;">
    <view class="flex-wrp" style="flex-direction: row">
      <view class="station-cnt-background" style="flex-direction: column;">
        <text class="station-cnt-font">总数:</text>
        <text class="station-cnt-font">22</text>
      </view>
      <ec-canvas id="mychart-pie-move-bar" canvas-id="mychart-pie" ec="{{ec}}"></ec-canvas>
      <view class="station-summary" style="flex-direction: column;">
        <view class = "sub-station-summary" style="flex-direction: row;">
          <text style="color: #4080ff">正常：18</text>
        </view>
        <view class = "sub-station-summary" style="flex-direction: row;">
          <text style="color: #ff0000">异常：2</text>
        </view>
        <view class = "sub-station-summary" style="flex-direction: row;">
          <text style="color: #c0c0c0">离线：1</text>
        </view>
        <view class = "sub-station-summary" style="flex-direction: row;">
          <text style="color: #ffff00">待建：1</text>
        </view>
      </view>
    </view>

    <view class="summary-stat-container" style="flex-direction: column;">
      <view class="sub-summary-stat-container" style="flex-direction: row;">
        <view class="child-summary-stat-container" style="flex-direction: row;">
          <view class="child-summary-stat">
            <image class="child-summary-icon" src="../../img/power-supply.png" mode=""></image>
          </view>
          <view>
            <text style="color:white">储能总容量</text>
            <text style="color:#4080ff">{{today_charge}} kV</text>
          </view>
        </view>
        <view class="child-summary-stat-container" style="flex-direction: row;">
          <view class="child-summary-stat">
          <image class="child-summary-icon" src="../../img/finance.png" mode=""></image>
          </view>
          <view>
            <text style="color:white">总收益</text>
            <text style="color:#4080ff">{{today_discharge}} ￥</text>
          </view>
        </view>
      </view>
      <view class="sub-summary-stat-container" style="flex-direction: row;">
        <view class="child-summary-stat-container" style="flex-direction: row;">
          <view class="child-summary-stat">
            <image class="child-summary-icon" src="../../img/power-supply.png" mode=""></image>
          </view>
          <view>
            <text style="color:white">累计充电量</text>
            <text style="color:#4080ff">{{today_charge}} kV</text>
          </view>
        </view>
        <view class="child-summary-stat-container" style="flex-direction: row;">
          <view class="child-summary-stat">
          <image class="child-summary-icon" src="../../img/power-supply-one.png" mode=""></image>
          </view>
          <view>
            <text style="color:white">累计放电量</text>
            <text style="color:#4080ff">{{today_discharge}} A</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class='swiper-tab'>
    <view class='swiper-tab-list {{currentTableTab==0 ? "selected" : ""}}' data-current='0' bindtap='swichTable'>
      日统计
    </view>
    <view class='swiper-tab-list {{currentTableTab==1 ? "selected" : ""}}' data-current='1' bindtap='swichTable'>
      月统计
    </view>
    <view class='swiper-tab-list {{currentTableTab==2 ? "selected" : ""}}' data-current='2' bindtap='swichTable'>
      年统计
    </view>
  </view>
  <swiper current='{{currentTableTab}}' class='swiper-box' duration='300' style='height:220px' bindchange='slideTable'>
    <swiper-item>
      <ec-canvas id="mychart-bar-move-bar" canvas-id="mychart-pie" ec="{{ecDailyBar}}"></ec-canvas>
    </swiper-item>
    <swiper-item>
      <ec-canvas id="mychart-bar-move-bar" canvas-id="mychart-pie" ec="{{ecMonthlyBar}}"></ec-canvas>
    </swiper-item>
    <swiper-item>
      <ec-canvas id="mychart-bar-move-bar" canvas-id="mychart-pie" ec="{{ecYearlyBar}}"></ec-canvas>
    </swiper-item>
  </swiper>

  <view class='swiper-tab2'>
    <view class='swiper-tab-list {{currentTableTab2==0 ? "selected" : ""}}' data-current='0' bindtap='swichTable2'>
      月收益
    </view>
    <view class='swiper-tab-list {{currentTableTab2==1 ? "selected" : ""}}' data-current='1' bindtap='swichTable2'>
      年收益
    </view>
  </view>
  <swiper current='{{currentTableTab2}}' class='swiper-box' duration='300' style='height:220px' bindchange='slideTable2'>
    <swiper-item>
      <ec-canvas id="mychart-bar-move-bar" canvas-id="mychart-pie" ec="{{ecMonthlyLine}}"></ec-canvas>
    </swiper-item>
    <swiper-item>
      <ec-canvas id="mychart-bar-move-bar" canvas-id="mychart-pie" ec="{{ecYearlyLine}}"></ec-canvas>
    </swiper-item>
  </swiper>
</view>

