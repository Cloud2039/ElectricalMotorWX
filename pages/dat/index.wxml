<!-- 所有使用教程可以在该链接找到https://echarts.apache.org/zh/option.html -->
<form bindsubmit="search">
  <view class='search-bar'>
    <image src="../../img/scanning-blue.png" mode="aspectFit" bindtap="scanQRCode">test</image>
    <input type='text' maxlength='12' placeholder='输入信息' name="neirong" />
    <button form-type='submit'>查询</button>
  </view>
  <view class="swiper-tab-container">
    <view class='swiper-tab'>
      <view class='swiper-tab-list {{currentTableTab==0 ? "selected" : ""}}' data-current='0' bindtap='switchTable'>
      润滑脂
      </view>
      <view class='swiper-tab-list {{currentTableTab==1 ? "selected" : ""}}' data-current='1'
      bindtap='switchTable'>
        轴承
      </view>
    </view>
  </view>
  <swiper current='{{currentTableTab}}' class='swiper-box' duration='300' 
  style='height:600px' bindchange='slideTable'>
    <swiper-item>
      <view class='selector-tab'>
        <view class='selector-tab-list {{currentLubeTab==0 ? "selected" : ""}}' data-current='0' bindtap='switchLubeTab'>
          正常
        </view>
        <view class='selector-tab-list {{currentLubeTab==1 ? "selected" : ""}}' data-current='1' bindtap='switchLubeTab'>
          待维护
        </view>
        <view class='selector-tab-list {{currentLubeTab==2 ? "selected" : ""}}' data-current='2' bindtap='switchLubeTab'>
          超期
        </view>
      </view>
      <scroll-view scroll-y class='scroller'>
        <block wx:for="{{current_lube_stats}}"  wx:key="index">
          <view class='block-nav' bindtap='toSpecific' data-query="{{item.runningData[0].motorId}}">
            <view class='view-id-and-stat'>
              <text class='text-id'>{{item.runningData[0].motorId}}</text>
              <text wx:if="{{item.runningData[0].motorStatus == 0}}" class='text-stat-normal'>正常</text>
              <text wx:if="{{item.runningData[0].motorStatus == 1}}" class='text-stat-close'>待维护</text>
              <text wx:if="{{item.runningData[0].motorStatus == 2}}" class='text-stat-over'>超期</text>
            </view>
            <view class='block-below'>
              <image class='block-img' src='../../img/motor_01.png' mode='widthFix'></image>
              <view class='block-info'>
                <view class='view-separate-block'>
                  <view class='view-c1'>
                    <text class="text-c1">地点：</text>
                    <text class="text-c1">轴伸端：</text>
                    <text class="text-c1">非轴伸端：</text>
                  </view>
                  <view class='view-c2'>
                    <text class="text-c2">{{item.location}}{{item.positionNum}}</text>
                    <view class='view-spec'>
                      <text class="text-c2">{{item.runningData[0].deMaintenanceTime}}</text>
                      <text class="text-c2">{{item.runningData[0].deRunningTime}}/{{item.runningData[0].deReferenceTime}}h</text>
                    </view>
                    <view class='view-spec'>
                      <text class="text-c2">{{item.runningData[0].ndeMaintenanceTime}}</text>
                      <text class="text-c2">{{item.runningData[0].ndeRunningTime}}/{{item.runningData[0].ndeReferenceTime}}h</text>
                    </view>
                  </view>
                </view>
              </view>
            </view>  
          </view>
        </block>
      </scroll-view>
    </swiper-item>
    <swiper-item>
      <view class='selector-tab'>
        <view class='selector-tab-list {{currentBearingTab==0 ? "selected" : ""}}' data-current='0' bindtap='switchBearingTab'>
          正常
        </view>
        <view class='selector-tab-list {{currentBeartingTab==1 ? "selected" : ""}}' data-current='1'bindtap='switchBearingTab'>
          待维护
        </view>
        <view class='selector-tab-list {{currentBearingTab==2 ? "selected" : ""}}' data-current='2'bindtap='switchBearingTab'>
          超期
        </view>
      </view>
    </swiper-item>
  </swiper>
</form>