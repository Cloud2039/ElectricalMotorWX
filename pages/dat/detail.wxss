.search-bar{
  display: flex;
  background-color: black;
  border-bottom: 1px solid solid;
  padding: 5px;
}

.search-bar image{
  height: 35px;
  width: 35px;
}

.search-bar input{
  height: 35px;
  line-height: 35px;
  background: white;
  flex-grow: 1;
  border-radius: 5px;
}

.search-bar button{
  background:  #ff923f;
  color: white;
  height: 35px;
  line-height: 35px; 
 }

 .scroller{
  height: 800px;
  background-color: white;
  display: flex;
  flex-direction: column;
 }

 .block-item {
  width: 25%;
}

.block-running-stat{

}

.block-basic{

}

.block-repair{
  
}

.block-nav {
  
  padding: 5px;
  width: 96%;
  border: 1px solid black;
  border-radius: 5px;
  box-shadow: 0px 2px 2px gainsboro;
  margin-top: 5px;
  background-color: white;
}

.block-below {
  display: flex;
  flex-direction: row;
}

.block-img {
  width: 20%;
}

.block-info {
  width: 80%;
  margin-left: 15px;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
}

.view-id-and-stat{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid gray;
  height: 25%;
}

.text-id {
  font-size: 20px;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  }

.text-stat-normal {
  font-size:20px;
  font-weight: bold;
  color: green;
  margin-right: 5px;
}

.text-stat-close {
  font-size:20px;
  font-weight: bold;
  color: orange;
  margin-right: 5px;
}

.text-stat-over {
  font-size:20px;
  font-weight: bold;
  color: red;
  margin-right: 5px;
}

.view-separate-block{
  display: flex;
  flex-direction: row;
  height: 100%;
}

.view-c1{
  display: flex;
  flex-direction: column;
  justify-content:space-evenly;
}

.text-c1{
  font-size: 12px;
  color: black;
}

.view-c2{
  display: flex;
  width: 75%;
  flex-direction: column;
  justify-content: space-evenly;
}

.view-spec{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
}

.text-c2{
  font-size: 12px;
  color: grey;
}