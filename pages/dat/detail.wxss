/* pages/dat/detail.wxss */

.search-bar{
  display: flex;
  background-color: black;
  border-bottom: 1px solid solid;
  padding: 5px;
}

.search-bar image{
  height: 35px;
  width: 35px;
}

.search-bar input{
  height: 35px;
  line-height: 35px;
  background: white;
  flex-grow: 1;
  border-radius: 5px;
}

.search-bar button{
  background:  #ff923f;
  color: white;
  height: 35px;
  line-height: 35px; 
 }

 .scroller{
  height: 800px;
  background-color: white;
  display: flex;
  flex-direction: column;
 }

.block-running-stat{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid rgb(226, 224, 224);
}

.block-image{
  width: 20%
}

.block-img{
  width: 100%
}

.block-running-stat-1{
  width: 80%;
  display: flex;
  flex-direction: column;
}

.block-id{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.block-id1{
  display: flex;
  flex-direction: column;
}

.block-lube{
  display: flex;
  flex-direction: row;
}

.block-sub-lube{
  display: flex;
  flex-direction: column;
  width: 50%;
}

.block-bearing{
  display: flex;
  flex-direction: column;
}

.row-view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.block-basic{
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid rgb(226, 224, 224);
}

.block-basic-sub1{
  display: flex;
  flex-direction: row;
}

.block-basic-sub2{
  display: flex;
  flex-direction: column;
  width: 25%;
  justify-content:space-evenly;
}

.block-repair{
  display: flex;
  flex-direction: column;
}

.text-id {
  font-size: 22px;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.text-running-stat-title{
  font-size: 17px;
  color:cornflowerblue;
}

.text-data-title{
  font-size: 13px;
  color: grey;
  margin-bottom: 4px;
}

.text-data{
  font-size: 13px;
  color: black;
  font-weight: bold;
  margin-bottom: 4px;
}

.selector-tab {
  width:        25%;
  border-bottom: 1px solid gray;
  line-height:  31px;
  display:      flex;
  flex-direction: row;
}

.selector-tab-list {
  display: inline-block;
  width: 50%;
  color: gray;
  text-align: center;
}

.selected {
  color: #4080ff;
  border-bottom: 3px solid #4080ff;
}