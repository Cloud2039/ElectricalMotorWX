/* pages/dat/overview.wxss */
page{
  background-color: #EFEFEF;   /* 背景颜色 */
  height: 100%;
}

.search-bar{
  display: flex;
  background-color: white;
  border-bottom: 1px solid solid;
  padding: 5px;
}

.search-bar image{
  height: 35px;
  width: 35px;
}

.search-bar input{
  height: 35px;
  line-height: 35px;
  background: #efefef;
  flex-grow: 1;
  border-radius: 5px;
}

.search-bar button{
  background:  #efefef;
  color: #4582fc;
  height: 35px;
  line-height: 35px; 
 }

.chart-container{
  margin-top: 50px;
  display:flex;
  align-items: center;
  height: 350px;
}

.station-cnt-background {
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 5px;
  display: flex;
  width:  50%;
  display: flex;
  border-radius: 20rpx;
  box-shadow: 0 0 5rpx rgba(255,255,255,0.15);
  background-color: #161924;
  justify-content: center;
}

.station-cnt-font {
  color:       #ff923f;
  font-size:    25px;
  text-align: center;
}

.station-summary{
  display:flex;
  width: 25%;
  justify-content: center;
}

#mychart-pie-move-bar {
  width: 100%;
  height: 250px;
  display: block;
}

.summary-stat-container{
  display:flex;
  align-items: center;
  margin-top: 50px;
  justify-content: space-evenly;
  flex-direction: row;
  margin-bottom: 10px;
}

.child-summary-stat-container{
  height: 100px;
  display:flex;
  width: 30%;
  align-items: center;
  justify-content: space-evenly;
  border-radius: 5px;
  box-shadow: 0px 2px 2px gainsboro;
  background-color: white;
}