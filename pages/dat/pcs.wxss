.move-container {
  width: 100%;
  height: 100%;
  background-color: black;
}

.move-container text {
  margin: 10px;
  display: block;
}

.flex-wrp{
  display:flex;
}

.picker{
  padding: 13px;
  background-color: #ff923f;
  font-size: x-large;
  text-align: center;
}

.pcs-title-font {
  color:       white;
  font-size:    18px;
}

.flex-wrp-horizontal{
  display:flex;
  width: 100%;
  align-items: center;
}

.flex-wrp-vertical-poc{
  display:flex;
  height: 100px;
  width: 98%;
  border-radius: 20rpx;
  box-shadow: 0 0 5rpx rgba(0,0,0,0.15);
  margin-top: 5px;
  margin-bottom: 5px;
  font-size: larger;
}

.running-container {
  margin-top: 10px;
  display: flex;
  background-color: black;
}

.pcs-status-container{
  display:flex;
  width:50%;
  align-items:center;
  justify-content: center;
}

.top-icon{
  width: 100px;
  height: 100px;
}

.child-PCS-container{
  display:flex;
  width: 50%;
  align-items: center;
}

.child-PCS-block-container{
  margin-bottom: 20px;
  display:flex;
  width: 50%;
  align-items: center;
}

.PCS-block-normal{
  margin-left: 20px;
  width: 75%;
  background-color: rgb(26, 230, 26);
  text-align: center;
}

.PCS-block-abnormal{
  margin-left: 20px;
  width: 75%;
  background-color: red;
  text-align: center;
}
