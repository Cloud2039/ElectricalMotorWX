<!--components/popup.wxml-->
<view class="popup-mask" hidden="{{!visible}}"></view>
<view class="popup-window" hidden="{{!visible}}">
  <view class="popup-header">
    <text class="popup-title">换轴时间</text>
  </view>
  <view class="popup-body">
    <view class="popup-message">
      <!-- 弹窗具体内容 -->
      <view class="page">
        <view>{{year}}年{{month}}月{{day}}日{{hour}}时</view>
          <picker-view style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange">
            <picker-view-column>
              <view wx:for="{{years}}" wx:key='unique' style="line-height: 30px">{{item}}年</view>
            </picker-view-column>
            <picker-view-column>
              <view wx:for="{{months}}" wx:key='unique' style="line-height: 30px">{{item}}月</view>
            </picker-view-column>
            <picker-view-column>
              <view wx:for="{{days}}" wx:key='unique' style="line-height: 30px">{{item}}日</view>
            </picker-view-column>
            <picker-view-column>
              <view wx:for="{{hours}}" wx:key='unique' style="line-height: 30px">{{item}}时</view>
            </picker-view-column>
          </picker-view>
        </view>
    </view>
    <view class="popup-buttons">
      <button class="popup-button" bindtap="cancel">取消</button>
      <button class="popup-button" bindtap="confirm">确认</button>
    </view>
  </view>
</view>